@model IEnumerable<TodoList.Models.TodoModel>

@{
    ViewData["Title"] = "Todo List";
}

<h1 class="display-4">Todo List</h1>

<p>
    <a class=" btn btn-primary" asp-action="Create">Create a new note</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>  
                @Html.DisplayFor(modelItem => item.Destriptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }, new {@class = "btn btn-warning"})
                @Html.ActionLink("Details", "Details", new { id = item.TaskId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.TaskId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
